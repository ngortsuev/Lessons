<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/amountEditText"
        android:layout_width="192dp"
        android:layout_height="45dp"
        android:layout_row="0"
        android:layout_column="0"
        android:background="@drawable/amount_background"
        android:digits="0123456789"
        android:elevation="@dimen/elevation"
        android:ems="10"
        android:hint="@string/edit_amount"
        android:inputType="numberDecimal"
        android:padding="@dimen/text_view_padding"
        android:text="@string/edit_amount" />

    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="191dp"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_column="0"
        android:gravity="center"
        android:hint="@string/enter_amount"
        android:paddingLeft="10"
        android:text="@string/enter_amount_text" />

    <TextView
        android:id="@+id/percentTextView"
        android:layout_width="144dp"
        android:layout_height="38dp"
        android:layout_row="2"
        android:layout_column="0"
        android:gravity="center|right"
        android:text="@string/tip_percentage" />

    <SeekBar
        android:id="@+id/percentSeekBar"
        android:layout_width="191dp"
        android:layout_height="37dp"
        android:layout_row="2"
        android:layout_column="1"
        android:max="30"
        android:progress="15" />

    <TextView
        android:id="@+id/tipLabelTextView"
        android:layout_width="144dp"
        android:layout_height="34dp"
        android:layout_row="3"
        android:layout_column="0"
        android:gravity="center|right"
        android:text="@string/tip" />

    <TextView
        android:id="@+id/tipTextView"
        android:layout_width="144dp"
        android:layout_height="37dp"
        android:layout_row="3"
        android:layout_column="1"
        android:gravity="fill|fill_horizontal" />

    <TextView
        android:id="@+id/totalLabelTextView"
        android:layout_width="144dp"
        android:layout_height="32dp"
        android:layout_row="4"
        android:layout_column="0"
        android:gravity="center|right"
        android:text="@string/total" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="142dp"
        android:layout_height="39dp"
        android:layout_row="4"
        android:layout_column="1"
        android:background="@drawable/result_background"
        android:gravity="fill|fill_horizontal" />

</GridLayout>